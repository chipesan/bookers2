<h1>User info</h1>
<p>name：<%= user.name %></p>
<p>introduction：<%= user.introduction %></p>
<% if user == current_user %>
    <p><%= link_to "プロフィール編集", edit_user_path(user) %></p>
<% else %>
    <p><%= link_to "プロフィール編集", user_path(user) %></p>
<% end %>

