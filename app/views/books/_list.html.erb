<h1>User info</h1>
<p><%= image_tag current_user.get_profile_image(100, 100) %></p>
<table class="table">
  <tbody><tr></tr>
  <tr>
	  <th>name <%= user.name %></th>
  </tr>
  <tr>
	  <th>introduction<%= user.introduction %></th>
	  <th></th>
  </tr>
</tbody></table>
<% if user == current_user %>
    <%= link_to edit_user_path(user), class: "btn btn-outline-secondary btn-block" do %>
    <i class="fas fa-user-cog"></i>
    <% end %>
<% else %>
    <%= link_to user_path(user), class: "btn btn-outline-secondary btn-block" do %>
    <i class="fas fa-user-cog"></i>
    <% end %>
<% end %>

