<h2>User info</h2>
<p><%= image_tag current_user.get_profile_image(100, 100) %></p>
<table class="table">
  <tbody><tr></tr>
  <tr>
	  <th>name</th><th><%= user.name %></th>
  </tr>
  <tr>
	  <th>introduction<%= user.introduction %></th>
	  <th></th>
  </tr>
</tbody></table>
<% if user == current_user %>
    <%= link_to edit_user_path(user), class: "btn btn-outline-secondary btn-block" do %>
    <i class="fas fa-user-cog"></i>
    <% end %>
<% else %>
    <%= link_to user_path(user), class: "btn btn-outline-secondary btn-block" do %>
    <i class="fas fa-user-cog"></i>
    <% end %>
<% end %>

  <h2 class="mt-3">New book</h2>
<!-- form_with部分 -->
  <%= form_with model: book do |f| %>
  <div class="form-group">
  <label for="book_title">Title</label>
  <%= f.text_field :title, class: "form-control book_title", id: "book_title" %>
  </div>
<div class="form-group">
  <label for="book_opinion">Opinion</label>
  <%= f.text_area :body, class: "form-control book_body", id: "book_opinion" %>
  </div>

  <%= f.submit 'Create Book', class: "btn btn-success" %>
  <% end %>